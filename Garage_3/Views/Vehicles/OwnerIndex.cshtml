@model IEnumerable<Garage_3.Models.Owner>

@{
    ViewData["Title"] = "OwnerIndex";
}

<h1>Medlemmar</h1>

<p>
    <a asp-action="AddOwner">Skapa ny medlem</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-action="OwnerViewModel" asp-route-id="@item.MemberNumber">Visa Profil</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
