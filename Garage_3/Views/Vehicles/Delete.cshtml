@model Garage_3.Models.Vehicle
@*@model IEnumerable<Garage_3.Models.Vehicle>*@

@{
    ViewData["Title"] = "Delete";
}

<h1>Ta bort fordon</h1>

<h3>Är du säker på att du vill ta bort @Html.DisplayFor(model => model.RegNum)?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ägare
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleType.VehicleTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wheels)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wheels)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color.ColorName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RegNum" />
        <input type="submit" value="Ta bort" class="btn btn-danger" />
        <button class="btn btn-outline-secondary" asp-action="Index">Tillbaka till alla fordon</button>
    </form>
</div>
