@model Garage_3.Models.Vehicle

@{
    ViewData["Title"] = "Details";
}

<h1>Detaljer</h1>

<div>
    <h4>Fordon  @Html.DisplayFor(model => model.RegNum)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ägare
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VehicleType.VehicleTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wheels)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wheels)
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color.ColorName)
        </dd>
        <dt class="col-sm-2">
            Senast parkerad
        </dt>
        <dd class="col-sm-10">
            @if (Model.ArrivalTime > DateTime.Now.AddDays(-30)) //om parkerad under senaste 30 dagarna
            {
                @Html.DisplayFor(model => model.ArrivalTime) 
            @*<div>-</div> 
                @Html.DisplayFor(model => model.DepartureTime)*@
            }
            else
            { <div>---</div>}
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RegNum">Redigera</a> |
    <a asp-action="Delete" asp-route-id="@Model.RegNum">Ta bort</a> |
    <a asp-action="Index">Tillbaka till alla fordon</a>
</div>
